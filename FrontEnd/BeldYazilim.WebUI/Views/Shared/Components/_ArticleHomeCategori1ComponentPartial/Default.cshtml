@model List<GetLastFiveArticlesByCategoryDto>
<section class="section posts-entry">
	<div class="container">
		@{
			var articles = Model;
		}

		<div class="row mb-4">
			<div class="col-sm-6">
				<h2 class="posts-entry-title">Yazılım</h2>
			</div>
			<div class="col-sm-6 text-sm-end"><a href="category.html" class="read-more">Hepsi</a></div>
		</div>
		<div class="row g-3">
			<div class="col-md-9">
				<div class="row g-3">
					@for (int i = 0; i < 2 && i < articles.Count; i++){

					<div class="col-md-6">
						<div class="blog-entry">
								<a href="/ArticleDetail/Index/@articles[i].articleID" class="img-link">
									<img src="/images/@(articles[i].bigImageUrl)" alt="Image" class="img-fluid">
								</a>
								<span class="date">@articles[i].creationTime.ToString("MMM. d, yyyy")</span>

								<h2><a href="/ArticleDetail/Index/@articles[i].articleID">@articles[i].title</a></h2>
								<p>@articles[i].creationTime</p>
								<p><a href="/ArticleDetail/Index/@articles[i].articleID" class="btn btn-sm btn-outline-primary">Devamını Oku</a></p>
						</div>
					</div>
					}

				</div>
			</div>
			<div class="col-md-3">
					@for (int i = 2; i < 5 && i < articles.Count; i++){

				<ul class="list-unstyled blog-entry-sm">
					<li>
							<span class="date">@articles[i].creationTime.ToString("MMM. d, yyyy")</span>

							<h3><a href="/ArticleDetail/Index/@articles[i].articleID">@articles[i].title</a></h3>
							<p>Tıklama Sayısı:@articles[i].clickCount</p>
							<p><a href="/ArticleDetail/Index/@articles[i].articleID" class="read-more">Devamını Oku</a></p>
					</li>


				</ul>
					}
			</div>
		</div>
	</div>
</section>
